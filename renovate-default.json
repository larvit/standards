{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base",
		"group:allNonMajor",
		"schedule:weekly"
	],
	"automerge": true,
	"bumpVersion": "patch",
	"lockFileMaintenance": {
		"enabled": false
	},
	"major": {
		"automerge": false
	},
	"prBodyNotes": ["{{#if isMajor}}:warning: MAJOR version :warning:{{/if}}"],
	"vulnerabilityAlerts": {
		"automerge": false
	}
}